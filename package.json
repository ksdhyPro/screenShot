{
  "main": "main.js",
  "name": "ksdhy",
  "version": "1.0.2",
  "scripts": {
    "start": "electron .",
    "build": "electron-builder"
  },
  "dependencies": {
    "conf": "^13.0.1",
    "electron-json-storage": "^4.6.0",
    "electron-log": "^5.2.0",
    "electron-screenshot-service": "^4.0.3",
    "electron-store": "^10.0.0",
    "electron-updater": "^6.3.4",
    "esm": "^3.2.25",
    "screenshot-desktop": "^1.15.0",
    "sharp": "^0.33.5"
  },
  "devDependencies": {
    "@babel/core": "^7.25.2",
    "@babel/plugin-transform-modules-commonjs": "^7.24.8",
    "@babel/preset-env": "^7.25.4",
    "electron": "20.3.8",
    "electron-builder": "^22.10.5",
    "tsc": "^2.0.4",
    "typescript": "^5.5.4"
  },
  "build": {
    "appId": "com.ksdhy",
    "icon": "assets/desktop.ico",
    "productName": "灵动截图",
    "asar": false,
    "perMachine": true,
    "allowElevation": true,
    "directories": {
      "output": "build"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true
    },
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "publish": [
      {
        "provider": "generic",
        "url": "http://1ms.ink:8001/update/"
      }
    ]
  }
}
